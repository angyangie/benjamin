    <section id="login-container">

        <div class="row">
            <div class="col-md-3" id="login-wrapper">
                <div class="panel panel-primary animated flipInY">
                    <center><h1>Welcome Back to Lemmen!</h1></center><br>

                    <div class="panel-heading">
                        <h3 class="panel-title">
                           Log In
                        </h3>
                    </div>
                    <div class="panel-body">
                       <p> Login to access your account.</p>
                           <div class="error_box">

                            <font color="red">
                              <h5>
                                <% if flash[:message] %>
                                <%= flash[:message] %>
                                <% end %>
                              </h5>
                            </font>
                          </div>

                         <%= form_for :user, {:url => '/login', :class => 'form-horizontal'} do |f| %>
                            <div class="form-group">
                                <div class="col-md-12">
                                  Email:<%= f.email_field :email, class: 'form-control', placeholder: 'Email' %><br>

                                </div>
                            </div>
                            <div class="form-group">
                               <div class="col-md-12">
                                Password:<%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
                                    <a href="javascript:void(0)" class="help-block">Forgot Your Password?</a><br>
                                </div>
                            </div>
                            <div class="form-group">
                               <div class="col-md-12">
                                  <%= f.submit "Log in", class: "btn btn-primary btn-block" %>

                                    <br><center> New user? <%= link_to "Sign up now!", signup_path, class: "btn btn-default btn-block" %> </center>

                                    <% end %>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </section>

