<h1>Welcome Back to Lemmen</h1><br>
<h3>Please enter your login information below:</h3><br>

  <font color="red">
  <h5>
  <% if flash[:message] %>
      <%= flash[:message] %>
    <% end %>
    </h5></font><br>

  <%= form_for :user, url: '/login' do |f| %>

  <div class="row">
    <div class="col-md-6 ">
      <div class="col-md-6 ">

          Email: <%= f.email_field :email, class: 'form-control' %>
          <br>
          <br>

          Password: <%= f.password_field :password, class: 'form-control' %>
          <br>
          <br>

          <%= f.submit "Log in", class: "btn btn-primary" %>
        <% end %>
        <br>
        <br>
        <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
</div>
